<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lesson431">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="889dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="794dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="193dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/rounded_border"
                    android:backgroundTint="#d34746">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="こんにちは"
                        android:textColor="@color/black"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#ff00d6"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="120dp"
                        android:paddingRight="120dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="11dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Vocabulary Test"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:rotation="360"
                                app:srcCompat="@drawable/__1_1_removebg_preview"
                                tools:srcCompat="@drawable/__1_1_removebg_previewssssss" />

                            <EditText
                                android:id="@+id/editTextTextPersonName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#d10027"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:text="Konichiwa"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                            <ImageButton
                                android:id="@+id/imageButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:rotation="180"
                                app:srcCompat="@drawable/__1_1_removebg_preview"
                                tools:srcCompat="@drawable/__1_1_removebg_previewssssss" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:paddingRight="45dp"
                    >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="135dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/__1_1_removebg_gray" /> <!-- Semi-transparent black overlay -->



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageButton
                            android:id="@+id/imageButton17"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_round_radius"
                            android:backgroundTint="@color/white"
                            android:elevation="8px"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:foregroundTint="#2196F3"
                            android:translationZ="4dp"
                            app:srcCompat="@drawable/screenshot_1710527692533_removebg_preview_40" />


                        <ImageButton
                            android:id="@+id/imageButton18"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"

                            android:layout_weight="1"
                            android:background="@drawable/button_round_radius"
                            android:backgroundTint="#dedbdb"
                            android:elevation="4dp"
                            android:translationZ="4dp"
                            app:srcCompat="@drawable/oip_removebg_preview_4_4" />

                        <ImageButton
                            android:id="@+id/imageButton19"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/button_round_radius"
                            android:backgroundTint="@color/white"
                            android:elevation="4dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:foregroundGravity="bottom"
                            android:translationZ="4dp"
                            app:srcCompat="@drawable/speaker_or_volume_icon_free_vector_removebg_preview_2_67_2_30" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="8dp"
                    android:background="@drawable/rounded_border">

                    <View
                        android:layout_marginRight="16dp"
                        android:elevation="8dp"
                        android:translationZ="8dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/frame_top_shadow"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        android:layout_gravity="top"
                        android:alpha="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="99dp"
                            android:orientation="vertical"
                            android:paddingBottom="30dp">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Answer"
                                android:textColor="#978e8e"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="Konnichiwa"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="102dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Definition"
                                android:textColor="#978e8e"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lorem Ipsum Lorem ipsum"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="30dp"
            android:background="#e8d320"
            android:backgroundTint="#e8d320"
            app:srcCompat="@drawable/objex_unlimited_black_line1"
            tools:srcCompat="@drawable/objex_unlimited_black_line1___copy" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7b0f0f
"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#7b0f0f"
                    app:srcCompat="@drawable/__1_1_removebg_preview" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#7b0f0f"
                    app:srcCompat="@drawable/__1_1_removebg_previews" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#7b0f0f"
                    app:srcCompat="@drawable/__1_1___copy_removebg_preview" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#7b0f0f"
                    app:srcCompat="@drawable/__1_1___copy__2__removebg_preview" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_border" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>